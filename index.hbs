{{!< default}}
<div class="container gh-page">
    <div class="gh-container">
        <h2 class="text-4xl font-bold text-black dark:text-light-white">{{t "Blog" }}</h2>
        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}
        {{else}}
        <p>Постов пока нет...</p>
        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
